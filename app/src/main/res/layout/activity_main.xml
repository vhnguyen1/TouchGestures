<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.touchgestures.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.58"
        android:id="@+id/gesturesScrollView">

        <TextView
            android:id="@+id/gesturesLogTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/new_line">
        </TextView>
    </ScrollView>


    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clearAll"
        android:text="@string/clear_button_text"
        tools:text="@string/clear_button_text"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/single_taps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/singleTapsTextView"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="@string/scrolls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="50dp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollsTextView"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="@string/double_taps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_column="0"
            android:layout_row="1" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doubleTapsTextView"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="@string/flings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="50dp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flingsTextView"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="@string/long_presses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longPressesTextView"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="30dp" />
    </GridLayout>

</LinearLayout>
